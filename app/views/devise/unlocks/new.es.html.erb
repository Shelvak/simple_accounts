<div class="row">
  <div class="public_form_container col-md-6 col-md-col-md-offset--3">
    <h3>Reenviar instrucciones de desbloqueo</h3>

    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, input_html: { autofocus: true, class: 'col-md-4' } %>
      </div>

      <div class="panel-footer">
        <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
        <%= show_button_dropdown(
          link_to('Reenviar instrucciones', '#', class: 'btn btn-primary submit'),
          devise_links_es
        ) %>
      </div>
    <% end %>
  </div>
</div>
