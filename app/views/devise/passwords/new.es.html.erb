<% @title = '¿Olvidaste tu contraseña?' %>

<p>
  Ingresa debajo tu dirección de correo y te enviaremos instrucciones para
  restablecerla
</p>

<br />

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, input_html: { autofocus: true, class: 'col-md-12' } %>
  </div>

  <div class="panel-footer">
    <%= render partial: 'shared/hidden_submit', locals: { f: f } %>
    <%= show_button_dropdown(
      link_to('Enviarme las instrucciones', '#', class: 'btn btn-primary submit'),
      devise_links_es
    ) %>
  </div>
<% end %>
